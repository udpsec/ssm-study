<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inofd.ssm.dao.UserDao">
    <sql id="userField">
        a.id as "id",
        a.name as "name",
        a.password as "password"
    </sql>
    <select id="findAll" resultType="com.inofd.ssm.domain.User">
        select
        <include refid="userField"/>
        from tbl_user as a
    </select>
</mapper>